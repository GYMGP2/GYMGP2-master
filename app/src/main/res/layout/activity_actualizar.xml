<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Actualizar">

    <ImageView
        android:id="@+id/btnatras3"
        android:layout_width="108dp"
        android:layout_height="67dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/atras" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:text="Perfil"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="42sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnatras3" />

    <ScrollView
        android:layout_width="391dp"
        android:layout_height="570dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:outlineAmbientShadowColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/foto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/galeria"
                tools:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btntomarfoto"
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#03A9F4"
                        android:text="Tomar Foto"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btngaleria"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#03A9F4"
                        android:text="Galería"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="384dp"
                android:layout_height="715dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtnombre"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:ems="10"
                    android:fontFamily="sans-serif-thin"
                    android:hint="Escriba su nombre"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#575555"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtapellidos"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:ems="10"
                    android:fontFamily="sans-serif-thin"
                    android:hint="Escriba sus apellidos"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#575555"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtfecha"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="fill_vertical"
                    android:hint="dd-mm-yyyy"
                    android:textColor="#000000"
                    android:textColorHint="#575555"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtpeso"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="fill_vertical"
                    android:hint="Peso (LB.)"
                    android:textColor="#000000"
                    android:textColorHint="#575555"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <Spinner
                    android:id="@+id/spinnerpais"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#2196F3" />

                <EditText
                    android:id="@+id/txttelefono"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:ems="10"
                    android:fontFamily="sans-serif-thin"
                    android:hint="Escriba su telefono"
                    android:inputType="phone"
                    android:textColor="#000000"
                    android:textColorHint="#575555"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtcorreo2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:fontFamily="sans-serif-thin"
                    android:hint="Escriba su correo"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#575555"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtcontra2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:fontFamily="sans-serif-thin"
                    android:hint="Escriba una contraseña"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#575555"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnactualizar"
                    android:layout_width="364dp"
                    android:layout_height="111dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/actualizar" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>